{
    "version": "2.1.7",
    "name": "titon-toolkit",
    "description": "A collection of extensible front-end UI components and behaviors for the responsive and mobile web.",
    "keywords": [
        "titon", "toolkit", "css", "sass", "scss", "jquery", "javascript", "ui", "interface",
        "framework", "bootstrap", "modular", "component", "responsive", "fluid", "mobile", "behavior"
    ],
    "copyright": "Copyright 2010-2015, The Titon Project",
    "license": "BSD-3-Clause",
    "homepage": "http://titon.io",
    "author": {
        "name": "Miles Johnson",
        "url": "http://milesj.me"
    },
    "bugs": "https://github.com/titon/toolkit/issues",
    "repository": "github:titon/toolkit",

    "scripts": {
        "env": "env",

        "js": "browserify -t [ babelify --presets [ es2015 react stage-1 ] ] ./src/test.js > ./build/titon.js",
        "js:lint": "eslint --config ./.eslint.json ./src ./tests",
        "js:watch": "watchify ./src/test.js -o ./build/titon.js -t [ babelify --presets [ es2015 react stage-1 ] ]",

        "css": "node-sass --indent-width 4 --output-style expanded --source-map ./build --importer ./build/tasks/import-scss-index.js ./src/test.scss ./build/titon.css",
        "css:lint": "sass-lint --config ./.scsslint.yml",
        "css:watch": "",
        "css:prefix": "postcss --use autoprefixer --config ./.postcss.json --output ./build/titon.css ./build/titon.css",

        "build": "npm run build:js && npm run build:css",
        "build:js": "npm run js",
        "build:css": "npm run css && npm run css:prefix",

        "test": "karma start ./.karma.js",
        "lint": "npm run js:lint && npm run css:lint",
        "watch": "npm run js:watch && npm run css:watch",
        "publish": "babel --presets es2015,react,stage-1 --out-dir ./dist ./src"
    },

    "peerDependencies": {
        "react": "~0.14",
        "react-dom": "~0.14",
        "lodash": "~3.10"
    },
    "devDependencies": {
        "directory-tree": "~0.1",

        "node-sass": "~3.4",
        "autoprefixer": "~6.2",
        "postcss-cli": "~2.3",
        "sass-lint": "~1.4",

        "react": "~0.14",
        "react-dom": "~0.14",
        "react-addons-test-utils": "~0.14",
        "eslint": "~1.10",
        "eslint-plugin-react": "~3.13",
        "babel-eslint": "~4.1",
        "babel-core": "~6.3",
        "babel-cli": "~6.3",
        "babel-preset-es2015": "*",
        "babel-preset-react": "*",
        "babel-preset-stage-1": "*",
        "babel-plugin-transform-decorators-legacy": "*",
        "uglify-js": "~2.6",
        "lodash": "~3.10",

        "karma": "~0.13",
        "karma-jasmine": "~0.3",
        "karma-ie-launcher": "*",
        "karma-safari-launcher": "*",
        "karma-chrome-launcher": "*",
        "karma-firefox-launcher": "*",
        "karma-browserify": "*",
        "jasmine-core": "~2.4",
        "enzyme": "~1.2",
        "browserify": "*",
        "babelify": "*",
        "watchify": "*"
    }
}
